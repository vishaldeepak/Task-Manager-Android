<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"	
    android:padding="6dp"
    android:descendantFocusability="blocksDescendants"
   >

<com.group.RedPanda.FinalProject.MyCheckBox 
    android:id="@+id/checkBox_subScreen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    />
    
	<TextView 
	    android:layout_toRightOf="@+id/checkBox_subScreen"
    	android:id="@+id/text_subScreen"
  		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"
    />
    


<ProgressBar
    	android:layout_marginTop="5dp" 
        android:id="@+id/subscreeb_progress"
        android:layout_below="@+id/text_subScreen"
        android:layout_alignLeft="@+id/text_subScreen"
        android:layout_width="200dp"
        android:layout_height="10dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>  

</RelativeLayout>

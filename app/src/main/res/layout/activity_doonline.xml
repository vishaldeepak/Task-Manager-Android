<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	 
		 <RelativeLayout 
		     	android:layout_width="match_parent"
			    android:layout_height="wrap_content">
		 
		     <TextView 
		     android:id="@+id/doOnline_textStatus"
		     android:layout_margin="15dp"
		     android:text="@string/status"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:textSize="18sp"/>
		     
		     <TextView 
		         android:layout_toRightOf="@+id/doOnline_textStatus"
		         android:layout_margin="15dp"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:textSize="18sp"
		         android:id="@+id/doOnline_status"
		         />
		    
		     
		     
		     
		 </RelativeLayout>
		 
	 <ViewStub 
        android:id="@+id/doOnlineInflateFalse"
        android:inflatedId="@+id/OnlineviewInflatedFalse"
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      	android:layout="@layout/viewstub_doonline_false"  
        />
	 
	 
	 <ViewStub 
        android:id="@+id/doOnlineInflateTrue"
        android:inflatedId="@+id/OnlineviewInflatedTrue"
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      	android:layout="@layout/viewstub_doonline_true"  
        />
	 
	 
	 
	 
	    
	</LinearLayout>

</ScrollView>